{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,  // Allow implicit 'any' types
    "strictNullChecks": false,  // Allow null checks to be less strict
    "strictFunctionTypes": false,
    "noImplicitThis": false,  // Allow implicit 'this'
    "noUnusedLocals": false,  // Allow unused local variables
    "noUnusedParameters": false,  // Allow unused parameters
    "noImplicitReturns": false,  // Allow implicit returns
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"],
}
